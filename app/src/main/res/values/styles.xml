<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabFontStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedThumbnailShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- or match your background corner radius -->
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="SpinnerPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@drawable/dialog_background</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/dialog_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>